<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvw_Amount"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="30px"
        android:background="#AEE2FA"
        android:ems="10"
        android:hint="@string/ent_amt"
        android:inputType="textPersonName"
        android:paddingLeft="40px"
        android:shadowColor="#212325"
        android:shadowDx="10.5"
        android:shadowDy="10.5"
        android:soundEffectsEnabled="false"
        android:textColor="#515151"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvw_Percentage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        android:text="0%"
        android:textSize="25sp" />

    <SeekBar
        android:id="@+id/sbr_Percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center|fill_horizontal"
        app:tickMarkTint="#FF5722" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:text="Tip"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvw_Tip"
        android:layout_width="296dp"
        android:layout_height="52dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="#FFD7B6"
        android:gravity="center|clip_vertical"
        android:shadowColor="#00000000"
        android:shadowDy="100"
        android:text="$0.00"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="40px"
        android:text="Total"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvw_Total"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="#FFD8BF"
        android:gravity="center|clip_vertical"
        android:text="$0.00"
        android:textSize="24sp" />

</GridLayout>